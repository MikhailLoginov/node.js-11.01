<html>
	<head>
		<base href="/" />
		<link rel="stylesheet" href="assets/main.css" />
		<link rel="stylesheet" href="node_modules/bootstrap/dist/css/bootstrap.css" />
	</head>
	<body>
	
	<div class="container">
		<h2>Новости экономики</h2>
		
		<div class="row">
			<div class="col-md-4">
				<form method="POST">
					<div class="form-group">
						<label>Количество новостей</label>
						<input type="text" name="news_cnt" class="form-control" value="{{cnt}}">
					</div>
					<div class="form-group">
						<button class="btn btn-primary" type="submit">Показать</button>
					</div>
				</form>
			</div>
		</div>
		
		<h3>Результаты:</h3>
		
		<div class="row">
			<div class="col-md-8">
				<div id="news-list">
					{{#if news}}
						{{#each news}}
							<div class="news-one">
								<div class="date">{{this.time}}</div>
								<a href="https://lenta.ru{{this.link}}" target="_blank">{{this.title}}</a>
							</div>
						{{/each}}
					{{/if}}
				</div>
			</div>
		</div>
	</div>
		
	</body>
</html>